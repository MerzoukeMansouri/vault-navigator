{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "plugins": [
    "@stryker-mutator/vitest-runner",
    "@stryker-mutator/typescript-checker"
  ],
  "testRunner": "vitest",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",

  "mutate": [
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "lib/vault-client.ts",
    "lib/storage.ts",
    "lib/services/**/*.ts",
    "lib/utils/**/*.ts",
    "contexts/**/*.tsx",
    "!**/__tests__/**",
    "!**/*.test.ts",
    "!**/*.test.tsx",
    "!**/types.ts",
    "!**/constants/**"
  ],

  "ignorePatterns": [
    "components/**",
    "app/**",
    "**/*.config.ts",
    "**/*.d.ts",
    "node_modules",
    ".next",
    "dist",
    "coverage"
  ],

  "thresholds": {
    "high": 80,
    "low": 40,
    "break": 25
  },

  "coverageAnalysis": "perTest",
  "concurrency": 4,
  "timeoutMS": 60000,

  "reporters": [
    "html",
    "clear-text",
    "progress",
    "json"
  ],

  "htmlReporter": {
    "fileName": "mutation-report.html"
  },

  "jsonReporter": {
    "fileName": "mutation-report.json"
  }
}
